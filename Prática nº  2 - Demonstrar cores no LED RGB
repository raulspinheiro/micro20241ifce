#include <Arduino.h>
// Define os pinos dos LEDs RGB
#define LED_R 25
#define LED_G 26
#define LED_B 27
void setup() {
pinMode(LED_R, OUTPUT);
pinMode(LED_G, OUTPUT);
pinMode(LED_B, OUTPUT);
}
void loop() {
// Amarelo
analogWrite(LED_R, 255);
analogWrite(LED_G, 255);
analogWrite(LED_B, 0);
delay(1000);
// Rosa
analogWrite(LED_R, 255);
analogWrite(LED_G, 192);
analogWrite(LED_B, 203);
delay(1000);
// Lil√°s
analogWrite(LED_R, 200);
analogWrite(LED_G, 162);
analogWrite(LED_B, 200);
delay(1000);
}
